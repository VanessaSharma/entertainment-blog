{{#if addNewComment}}
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="well">
        <h2>New Comment</h2>
        <div>
          <form>
            <div class="form-group">
              <label for="author">Author</label>
              {{input value=author id="author"}}
            </div>
            <div class="form-group">
              <label for="content">Content</label>
              {{input value=content id="content"}}
            </div>
            <button {{action 'saveComment'}}>Save</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
{{else}}
  <button id="newButton" {{action 'commentFormShow'}}>New Comment</button>
{{/if}}
